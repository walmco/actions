# Target
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
# Device: HiWiFi HC5962
CONFIG_TARGET_ramips_mt7621_DEVICE_hiwifi_hc5962=y

# LUCI (web 管理)
CONFIG_PACKAGE_luci=y

# 主题：Argon
CONFIG_PACKAGE_luci-theme-argon=y

# adblock-fast = luci-app-block-fast
CONFIG_PACKAGE_luci-app-block-fast=y

# 保留常见驱动（根据 mt7621.mk 的 DEVICE_PACKAGES）
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt76x2=y
CONFIG_PACKAGE_kmod-usb3=y

# --- 明确不包含（图二服务里看到的那些插件） ---
# 上网时间控制（Access Control）
# CONFIG_PACKAGE_luci-app-accesscontrol is not set

# 动态 DNS
# CONFIG_PACKAGE_luci-app-ddns is not set

# 带宽/流量监控 (nlbwmon)
# CONFIG_PACKAGE_nlbwmon is not set
# CONFIG_PACKAGE_luci-app-nlbwmon is not set

# 网络唤醒 (Wake on LAN)
# CONFIG_PACKAGE_luci-app-wol is not set

# KMS 服务 (vlmcsd)
# CONFIG_PACKAGE_vlmcsd is not set
# CONFIG_PACKAGE_luci-app-vlmcsd is not set

# UPnP 服务
# CONFIG_PACKAGE_miniupnpd is not set
# CONFIG_PACKAGE_luci-app-upnp is not set

# 如果之前仓库中已有 luci-app-adblock，显式关闭以避免冲突
# CONFIG_PACKAGE_luci-app-adblock is not set
